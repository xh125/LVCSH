include make.inc
 
MYSRC= $(wildcard $(SRCDIR)/$(SUB)/*.f90)
MYTMP= $(patsubst %.f90,%.o, $(MYSRC))
MYOBJ= $(patsubst $(SRCDIR)/$(SUB)/%,$(OBJDIR)/$(DEST)/%, $(MYTMP))
all: $(MYOBJ)
 
 
$(MYOBJ): $(OBJDIR)/$(DEST)/%.o: $(SRCDIR)/$(SUB)/%.f90 
    $(FC) -c $(FFLAGS)  $< -o $@
 
clean:
    rm -f $(MYOBJ)
 
submit: