include make.inc
SUB=mod
# 这里必须按照一定顺序填写module源代码文件
MYSRC = $(SRCDIR)/$(SUB)/mod1.f90 \
        $(SRCDIR)/$(SUB)/mod2.f90 \
    $(SRCDIR)/$(SUB)/mod3.f90 
 
MYTMP= $(patsubst %.f90,%.o, $(MYSRC))
MYOBJ= $(patsubst $(SRCDIR)/$(SUB)%,$(OBJDIR)%, $(MYTMP))
all: $(MYOBJ)
 
$(MYOBJ): $(OBJDIR)/%.o: $(SRCDIR)/$(SUB)/%.f90
    $(FC) -c $(FFLAGS)  $< -o $@
 
clean:
    rm -f $(MYOBJ)